<?xml version="1.0"?>
<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Constants for unit conversion -->
  <xacro:property name="inches" value="0.0254" />

  <!-- Base dimensions -->
  <xacro:property name="base_width" value="${18 * inches}" />
  <xacro:property name="base_length" value="${36 * inches}" />
  <xacro:property name="base_height" value="${5 * inches}" />

  <!-- Wheel dimensions -->
  <xacro:property name="wheel_width" value="${2.75 * inches}" />
  <xacro:property name="wheel_radius" value="${6.25 * inches}" />
  <xacro:property name="wheel_x_offset" value="${-16 * inches}" />
  <xacro:property name="wheel_y_gap" value="${1 * inches}" />
  <xacro:property name="wheel_z_offset" value="${2 * inches}" />

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Laser -->
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="${12 * inches} 0 ${8 * inches}" rpy="0 0 ${pi}"/>
  </joint>

  <link name="laser"/>

    <!-- GPS -->
  <joint name="gps_joint" type="fixed">
    <parent link="base_link"/>
    <child link="gps"/>
    <origin xyz="${12 * inches} 0 ${8 * inches}" rpy="0 0 0"/>
  </joint>

  <link name="gps"/>

  <!-- Wheels -->
  <xacro:macro name="wheel" params="prefix x_reflect y_reflect">

    <joint name="${prefix}_joint" type="fixed">
      <parent link="base_link"/>
      <child link="${prefix}_link"/>
      <origin xyz="${x_reflect*wheel_x_offset} ${y_reflect*(base_width/2+wheel_width/2+wheel_y_gap)} -${wheel_z_offset}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>

    <link name="${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="black">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
    </link>
    
  </xacro:macro>

  <xacro:wheel prefix="drivewhl_l" x_reflect="-1" y_reflect="1" />
  <xacro:wheel prefix="drivewhl_r" x_reflect="-1" y_reflect="-1" />

</robot>
